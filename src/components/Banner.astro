---
interface Props {
    message: string;
}

const { message} = Astro.props;
---

<section class="banner">
    <span id="message">{message}</span>
</section>

<style>
    .banner{
    width: 101%;
    height: 95px;
    background-image: url(https://i.pinimg.com/564x/5d/48/8f/5d488f0d61a59be71be2aee756834cf3.jpg);
    background-position: center;
    color: rgb(242, 242, 231);
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin-top: 60px;
    
}


.banner span{
    font-size: 75px;
}

</style>